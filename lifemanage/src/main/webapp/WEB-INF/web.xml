<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Life Manage</display-name>
	<servlet>
		<servlet-name>helloServlet</servlet-name>
		<servlet-class>com.mycom.servlet.HelloServlet</servlet-class>
	</servlet>
	<!--servlet-mapping是指根据别名，定义访问方式 -->
	<servlet-mapping>
		<servlet-name>helloServlet</servlet-name>
		<url-pattern>/hello.htm</url-pattern>
	</servlet-mapping>
</web-app>
